Erik Henry Kenzo Kato
Vetor de 10 posições. Contar e escrever quantos valores pares ele possui.
*******************************************************************************/

#include <stdio.h>
#define TAMANHO 10 

int main() {
   int v[TAMANHO], totalPares=0;
   
   printf ("(ENTRADA) Digite %d valores\n", TAMANHO);
   for (int i=0; i< TAMANHO ;i++) {
       printf ("v[%d]: ", i);
       scanf ("%d", &v[i]);
   }
   
   for (int i=0; i< TAMANHO ;i++) {
       if (v[i] %2 == 0) totalPares++;
   }

   printf ("\n(SAIDA) A quantidade de pares é %d", totalPares);


    return 0;
}
